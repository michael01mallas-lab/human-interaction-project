<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="500.0" prefWidth="800.0" styleClass="anchor-pane" stylesheets="@mp3Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mp3.mp3Controller">

      <Label fx:id="songLabel" alignment="CENTER" layoutX="140.0" layoutY="15.0" prefHeight="50.0" prefWidth="650.0" text="MP3 Player" textFill="#e10707">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <ProgressBar fx:id="songProgressBar" layoutX="50.0" layoutY="400.0" prefHeight="20.0" prefWidth="700.0" progress="0.0" />
      <Button fx:id="playButton" layoutX="280.0" layoutY="430.0" mnemonicParsing="false" onAction="#playMedia" prefHeight="50.0" prefWidth="105.0" text="Play">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="pauseButton" layoutX="395.0" layoutY="430.0" mnemonicParsing="false" onAction="#pauseMedia" prefHeight="50.0" prefWidth="105.0" text="Pause">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="resetButton" layoutX="165.0" layoutY="430.0" mnemonicParsing="false" onAction="#resetMedia" prefHeight="50.0" prefWidth="105.0" text="Reset">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="previousbutton" layoutX="50.0" layoutY="430.0" mnemonicParsing="false" onAction="#previousMedia" prefHeight="50.0" prefWidth="105.0" text="Previous">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="nextButton" layoutX="510.0" layoutY="430.0" mnemonicParsing="false" onAction="#nextMedia" prefHeight="50.0" prefWidth="105.0" text="Next">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ComboBox fx:id="speedBox" layoutX="15.0" layoutY="215.0" onAction="#changeSpeed" prefHeight="20.0" prefWidth="115.0" promptText="Speed" />
      <Slider fx:id="volumSlider" layoutX="628.0" layoutY="455.0" max="100.0" prefHeight="20.0" prefWidth="125.0" value="50.0" />
      <Button fx:id="addFileButton" layoutX="15.0" layoutY="15.0" mnemonicParsing="false" onAction="#addFile" prefHeight="20.0" prefWidth="115.0" text="Add file">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="volumeLabel" layoutX="628.0" layoutY="430.0" onScroll="#volumeSliderScroll" prefHeight="30.0" prefWidth="125.0" text="Volume:">
         <font>
            <Font size="10.0" />
         </font></Label>


      <ToggleButton fx:id="autoPlaybutton" layoutX="15.0" layoutY="115.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="115.0" text="Auto Play">
       <font>
           <Font size="18.0" />
       </font>
      </ToggleButton>
      <ToggleButton fx:id="shuffleButton" layoutX="15.0" layoutY="165.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="115.0" text="Shuffle">
            <font>
             <Font size="18.0" />
            </font>
      </ToggleButton>
   <Label fx:id="timeLabel" layoutX="50.0" layoutY="370.0" prefHeight="30.0" prefWidth="369.0" text="Time:">
      <font>
         <Font size="10.0" />
      </font>
   </Label>
   <ListView fx:id="listOfSongs" layoutX="140.0" layoutY="85.0" maxHeight="250.0" maxWidth="650.0" prefHeight="250.0" prefWidth="650.0" />
   <Button fx:id="deleteButton" layoutX="15.0" layoutY="65.0" mnemonicParsing="false" onAction="#deleteSelectedSong" prefHeight="20.0" prefWidth="115.0" text="Delete ">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
</AnchorPane>
